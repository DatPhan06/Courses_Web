<div class="col-4">
    {{#each data}}
    <form action="/course/{{this.course_id}}" method="GET">
        <a href="/course/{{this.course_id}}">
            <div class="card card-courses-item" style="width: 8rem;">
                <form action="">
                    <img class="card-img-top" src="{{this.course_image}}" alt="{{this.course_name}}">
                    <div class="card-body">
                        <h5 class="card-title">{{this.course_name}}</h5>
                        <p class="card-text">{{this.course_description}}</p>
                    </div>
                </form>
            </div>
        </a>
    </form>

    {{/each}}
</div>
</div>
