<link rel="stylesheet" href="/css/app.css">


<div class="col col-lg-12">
    <div class="list">
        <div class="text">Courses</div>
        <div class="mt-2">
            <div class="row">
                <div class="col-sm-6">
                    {{#each data}}


                    <div class="card" style="width: 18rem;">
                        <a href="/course/{{this.course_id}}">
                            <img src="{{this.image_url}}" alt="" width="300px" height="250px">
                        </a>

                        <div class="card-body">
                            <a href="/course/{{this.course_id}}">
                                <h5 class="card-title">{{this.course_name}}</h5>
                            </a>

                            <p class="card-text">{{this.course_description}}</p>
                            <a href="/course/{{this.course_id}}" class="btn btn-primary">Go courses</a>
                        </div>
                    </div>


                    {{/each}}
                </div>

            </div>
        </div>
    </div>
</div>
</div>